{
  "manifest_version": 3,
  "name": "PhishGuard",
  "version": "1.0",
  "description": "AI-powered phishing protection for URLs.",
  "permissions": ["tabs", "activeTab", "storage"],
  "host_permissions": ["http://127.0.0.1:5000/*", "<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "PhishGuardLogo.png",
    "default_popup": "popup.html",
    "default_title": "PhishGuard"
  },
  "icons": {
    "128": "PhishGuardLogo.png"
  }
}
